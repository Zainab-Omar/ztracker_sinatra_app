<% if flash.has?(:message) %>
  <h2 style="color:green;"><%= flash[:message] %></h2>
<% end %>

<% if flash.has?(:warning) %>
  <h2 style="color:red;"><%= flash[:warning] %></h2>
<% end %>


<h1>Welcome <%= @current_user.username %></h1>

<h3>My Trackers </h3>
 <ol>
   <% if @trackers.size > 0 %>
    <% @trackers.each do |tracker| %>
     <% if tracker.user_id == @current_user.id %>
      <li> Tracker Create at: <a href="/trackers/<%= tracker.id %>"><%=tracker.created_at%></a></li>
     <%end%>
      <%end%>
   </ol>

<br><br>

  <a href="/trackers/new">Create new tracker</a>
  <%else%>
    <h3>You do not have any trackers! <a href="/trackers/new">Create new tracker</a></h3>
  <%end%>
 

